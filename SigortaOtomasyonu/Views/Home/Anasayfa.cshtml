
@{
    ViewBag.Title = "AnaSayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" id="bootstrap-css" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.min.js"></script>
    <link href="~/Content/otomasyon/tanimcard.css" rel="stylesheet" />
</head>
<body>

    <br />
    <h1 style="margin-left:50%;margin-right:50%">VAKIFBANK</h1>
    <h1 style="margin-left:51%;margin-right:50%">ANASAYFA</h1>
    <br />
        <div class="box" style="margin-left:auto;margin-right:auto">
            <div class="container">
                <div class="row">
                    @{ Peak.Service.SigortaOtomasyonu.STanimGetir tanimGetir = new Peak.Service.SigortaOtomasyonu.STanimGetir();
                        var tanim = tanimGetir.tanim();}
                    @foreach (var item in tanim)
                    {
                        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                            <div class="box-part text-center" style="background-color:gold;">
                                <div class="title">
                                    <h3>@item.tanim_adi</h3>
                                </div>
                                <div class="text">
                                    <span>Açıklama: @item.tanim_aciklamasi</span>
                                </div>
                                <a href="/Home/@item.tanim_kodu">GİT</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    <br /><br /><br /><br /><br /><br />
</body>
</html>