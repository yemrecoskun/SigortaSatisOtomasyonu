        <div class="menu-list">
            <ul id="menu-content" class="menu-content collapse out">
                <li id="home">
                    <a href="/Home/AnaSayfa">
                        <i class="imgcontainer"><img src="~/img/anasayfa.png" alt="Logo" style="width:15px;" /> </i>AnaSayfa
                    </a>
                </li>
                <li data-toggle="collapse" data-target="#products" class="collapsed active">
                    <a href="#"><i class="fa fa-globe fa-lg" style="color:gold"></i> Tanımlamalar <span class="arrow"></span></a>
